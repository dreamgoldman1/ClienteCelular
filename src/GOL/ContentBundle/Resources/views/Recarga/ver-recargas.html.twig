{% extends 'cliente.html.twig' %}
{% block content %}
    <div class="container-fluid">
        <div class="page-content">
            <!-- BEGIN BREADCRUMBS -->
            <div class="breadcrumbs">
                <h1>Ver Recargas</h1>
                <ol class="breadcrumb">
                    <li>
                        <a href="{{ env }}">Inicio</a>
                    </li>
                    <li class="active">Ver Recargas</li>
                </ol>
            </div>
            <!-- END BREADCRUMBS -->
            <!-- BEGIN PAGE BASE CONTENT -->
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN VALIDATION STATES-->
                    <div class="portlet light portlet-fit portlet-form bordered" id="form_wizard_1">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class=""></i>
                                <span class="caption-subject font-green sbold uppercase">Buscar # de Celular</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <!-- BEGIN FORM-->
                            <form action="" class="form-horizontal" method="POST">
                                <div class="form-body">
                                    <h3 class="form-section">Datos de consulta</h3>
                                    <div class="form-group">
                                        <label class="control-label col-md-3" for="no_celular"># de Celular </label>
                                        <div class="col-md-4">
                                            <input type="number" min="3000000000" max="3309999999" class="form-control" id="no_celular" name="no_celular">
                                            <span class="help-block">Ingrese el n√∫mero a consultar</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="submit" class="btn green">Consultar</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!-- END FORM-->
                        </div>
                    </div>
                    <!-- END VALIDATION STATES-->
                </div>
            </div>
            
            {% if dataRecargas is defined %}
            <div class="row">
                <div class="col-md-12">
                    <!-- Begin: life time stats -->
                    <div class="portlet light portlet-fit portlet-datatable bordered">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="icon-users font-dark"></i>
                                <span class="caption-subject font-dark sbold uppercase">Historial de recargas para el # celular: </span><span class="caption-subject font-red sbold uppercase">{{ dataRecargas.0.no_celular }}</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="table-container">
                                <div id="datatable_ajax_wrapper" class="dataTables_wrapper dataTables_extended_wrapper no-footer">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover table-checkable dataTable no-footer" id="datatable_ajax" aria-describedby="datatable_ajax_info" role="grid">
                                            <thead>
                                                <tr role="row" class="heading">
                                                    <th width="10%" class="sorting" tabindex="0" aria-controls="datatable_ajax" rowspan="1" colspan="1"> Id </th>
                                                    <th width="30%" class="sorting" tabindex="0" aria-controls="datatable_ajax" rowspan="1" colspan="1"> Valor de Recarga. </th>
                                                    <th width="25%" class="sorting" tabindex="0" aria-controls="datatable_ajax" rowspan="1" colspan="1"> Fecha </th>
                                                </tr>
                                            </thead>
                                            <tbody> 
                                                {% for recarga in dataRecargas %}
                                                    <tr>
                                                        <td rowspan="1" colspan="1">{{ recarga.id }}</td>
                                                        <td rowspan="1" colspan="1">$ {{ recarga.valor_recarga | number_format(0, ',', '.') }}</td>
                                                        <td rowspan="1" colspan="1">{{ recarga.fecha_recarga }}</td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-8 col-sm-12">
                                            <div class="dataTables_paginate paging_bootstrap_extended">
                                                <div class="pagination-panel"> Pag. 
                                                    <a href="#" class="btn btn-sm default prev disabled"><i class="fa fa-angle-left"></i></a>
                                                    <input type="text" class="pagination-panel-input form-control input-sm input-inline input-mini" maxlenght="5" style="text-align:center; margin: 0 5px;" value="1" disabled>
                                                    <a href="#" class="btn btn-sm default next disabled"><i class="fa fa-angle-right"></i></a> de 
                                                    <span class="pagination-panel-total"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End: life time stats -->
                </div>
            </div>
            {% endif %}
            <!-- END PAGE BASE CONTENT -->
        </div>
    {% endblock %}
